port 443
proto tcp
mssfix 1460
sndbuf 393216
rcvbuf 393216
push "sndbuf 393216"
push "rcvbuf 393216"
mark 11
fast-io
tcp-nodelay
dev tun
server 10.8.0.0 255.255.255.0
ifconfig-pool-persist /var/log/openvpn/ipp.txt
push "redirect-gateway def1 bypass-dhcp"
push "dhcp-option DNS 10.8.0.1"
client-to-client
duplicate-cn
keepalive 10 120
cipher AES-256-CBC   # AES
compress lzo
user nobody
group nogroup
persist-key
persist-tun
status /var/log/openvpn/openvpn-status.log
log         /var/log/openvpn/openvpn.log
errors-to-stderr
verb 0
verify-client-cert none
username-as-common-name
auth-user-pass-verify /usr/lib/openvpn/plugins/openvpn-sqlite-auth/user-auth.py via-env
script-security 3
management 127.0.0.1 2015
